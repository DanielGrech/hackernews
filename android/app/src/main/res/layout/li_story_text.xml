<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:contentPaddingBottom="@dimen/padding_small"
    app:contentPaddingLeft="@dimen/padding_default"
    app:contentPaddingRight="@dimen/padding_default"
    app:contentPaddingTop="@dimen/padding_small">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="all"
        android:linksClickable="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        tools:text="Story text goes here!" />
</android.support.v7.widget.CardView>